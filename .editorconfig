root = true

# All Files
[*]
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = space
end_of_line              = lf
charset                  = utf-8
indent_size              = 4

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# Web Files
[*.{htm,html}]
indent_size              = 2
max_line_length          = 120

[*.{js,css}]
indent_size              = 2
max_line_length          = 80

[*.{inc,php,phpt,xml}]
indent_size              = 4
max_line_length          = 80
